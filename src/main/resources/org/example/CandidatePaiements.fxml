<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.CandidatePaiementsController"
      alignment="TOP_LEFT"
      spacing="20"
      styleClass="content-area"
      maxWidth="1.7976931348623157E308"
      maxHeight="1.7976931348623157E308"
      VBox.vgrow="ALWAYS">

    <!-- Section: Unpaid Exams -->
    <Label text="Examens impayÃ©s" styleClass="header-title" />
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS" styleClass="custom-scrollpane">
        <content>
            <VBox fx:id="examListContainer"
                  spacing="15"
                  alignment="TOP_LEFT"
                  maxWidth="1.7976931348623157E308">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
            </VBox>
        </content>
    </ScrollPane>

    <!-- Section: Unpaid Payments -->
    <Label text="Paiements en attente" styleClass="header-title" />
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS" styleClass="custom-scrollpane">
        <content>
            <VBox fx:id="paymentListContainer"
                  spacing="15"
                  alignment="TOP_LEFT"
                  maxWidth="1.7976931348623157E308">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
            </VBox>
        </content>
    </ScrollPane>

    <!-- Section: Payment History -->
    <Label text="Historique des paiements" styleClass="header-title" />
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS" styleClass="custom-scrollpane">
        <content>
            <VBox fx:id="paymentHistoryContainer"
                  spacing="15"
                  alignment="TOP_LEFT"
                  maxWidth="1.7976931348623157E308">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
            </VBox>
        </content>
    </ScrollPane>

</VBox>
