<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.AddMaintenanceController"
      spacing="10" alignment="TOP_LEFT"
      style="-fx-background-color: #F5F5F5; -fx-padding: 20;"
      prefWidth="600" prefHeight="220">

    <Label text="Ajouter un Entretien" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
    <Label text="Complétez les informations pour créer un nouveau entretien" style="-fx-font-size: 14; -fx-text-fill: #666;" />

    <Label text="Date Entretien:"/>
    <DatePicker fx:id="dateMaintenance" />

    <Label text="Type Entretien:"/>
    <TextField fx:id="txtTypeMaintenance" />

    <Label text="Description:"/>
    <TextField fx:id="txtDescription" />

    <Label text="Coût:"/>
    <TextField fx:id="txtCost" />

    <Label text="Lien Facture:"/>
    <TextField fx:id="txtScannedInvoice" />

    <HBox spacing="12">
        <Button text="Enregistrer" fx:id="btnSave" />
        <Button text="Annuler" fx:id="btnCancel" />
    </HBox>
</VBox>
