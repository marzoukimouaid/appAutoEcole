<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Priority?>

<HBox fx:id="root"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="AutoEcole.controller.NotificationController"
      alignment="CENTER_LEFT"
      spacing="10"
      maxWidth="400" minWidth="400"
      maxHeight="60" minHeight="60"
      style="-fx-background-radius: 12; -fx-padding: 12px 20px; -fx-spacing: 15px;">

    <children>
        <!-- Notification Message -->
        <Label fx:id="messageLabel"
               wrapText="true"
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;"
               maxWidth="320"/>

        <!-- Spacer to push 'X' to the right -->
        <HBox HBox.hgrow="ALWAYS"/>

        <!-- Close Button (Using 'X' Character) -->
        <Label fx:id="closeButton"
               text="X"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white; -fx-cursor: hand;"/>
    </children>
</HBox>
