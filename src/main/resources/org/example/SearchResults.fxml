<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controller.SearchResultsController" spacing="10" styleClass="root">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <children>
        <Label fx:id="lblTitle" styleClass="title" text="Search Results"/>
        <Label fx:id="lblMessage" styleClass="subtitle" text="Results will be displayed here."/>
        <ScrollPane fx:id="resultsScrollPane" fitToWidth="true" prefHeight="300" styleClass="custom-scrollpane" VBox.vgrow="ALWAYS">
            <content>
                <VBox fx:id="resultsContainer" spacing="15" alignment="TOP_LEFT" style="-fx-padding: 20;"/>
            </content>
        </ScrollPane>
    </children>
</VBox>
