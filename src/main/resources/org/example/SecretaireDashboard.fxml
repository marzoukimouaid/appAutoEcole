<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.geometry.*?>
<BorderPane fx:id="root" xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.SecretaireController"
            stylesheets="@style.css">

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox fx:id="sidebar" spacing="16" alignment="TOP_LEFT">
            <!-- Sidebar Header: brand/profile at top -->
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="sidebar-header">
                <Circle fx:id="profileCircle" radius="18" fill="#c4c4c4"/>
                <Label text="MyApp" styleClass="sidebar-brand"/>
            </HBox>

            <!-- Nav Buttons (icons set in controller) -->
            <VBox fx:id="sidebarNav" spacing="10" alignment="TOP_LEFT" styleClass="sidebar-nav">
                <Button fx:id="btnDashboard" styleClass="sidebar-button" text="Dashboard"/>
                <Button fx:id="btnContent" styleClass="sidebar-button" text="Content"/>
                <Button fx:id="btnAnalytics" styleClass="sidebar-button" text="Analytics"/>
                <Button fx:id="btnLikes" styleClass="sidebar-button" text="Likes"/>
                <Button fx:id="btnComments" styleClass="sidebar-button" text="Comments"/>
                <Button fx:id="btnShare" styleClass="sidebar-button" text="Share"/>
            </VBox>

            <Pane fx:id="sidebarSpacer" VBox.vgrow="ALWAYS"/>

            <!-- Footer: Only Logout now, no more Dark Mode toggle -->
            <VBox fx:id="sidebarFooter" spacing="10" alignment="TOP_LEFT" styleClass="sidebar-footer">
                <Button fx:id="btnLogout" styleClass="sidebar-button" text="Logout"/>
            </VBox>
        </VBox>
    </left>

    <!-- TOP BAR -->
    <top>
        <HBox fx:id="topBar" spacing="16" alignment="CENTER_LEFT" styleClass="top-bar">
            <!-- Hamburger menu button -->
            <Button fx:id="btnMenu" styleClass="menu-button"/>

            <!-- Spacer to push avatar to right -->
            <Pane HBox.hgrow="ALWAYS"/>

            <!-- User avatar circle -->
            <Circle fx:id="avatarImageView" radius="17" fill="#dddddd"/>
        </HBox>
    </top>

    <!-- CENTER CONTENT -->
    <center>
        <VBox fx:id="mainContent" spacing="20" alignment="TOP_LEFT" styleClass="content-area">

            <!-- Stats Cards Row -->
            <HBox fx:id="cardsRow" spacing="16" alignment="TOP_LEFT">
                <!-- Likes -->
                <VBox fx:id="cardLikes" styleClass="stats-card" spacing="5">
                    <Label text="Total Likes" styleClass="stats-card-title"/>
                    <Label fx:id="lblLikes" text="50,120" styleClass="stats-card-value"/>
                </VBox>
                <!-- Comments -->
                <VBox fx:id="cardComments" styleClass="stats-card-alt" spacing="5">
                    <Label text="Comments" styleClass="stats-card-title"/>
                    <Label fx:id="lblComments" text="25,120" styleClass="stats-card-value"/>
                </VBox>
                <!-- Shares -->
                <VBox fx:id="cardShares" styleClass="stats-card-purple" spacing="5">
                    <Label text="Total Share" styleClass="stats-card-title"/>
                    <Label fx:id="lblShares" text="10,320" styleClass="stats-card-value"/>
                </VBox>
            </HBox>

            <!-- Title Above Table -->
            <Label text="Recent Activity" styleClass="section-title"/>

            <!-- Table for activity logs -->
            <TableView fx:id="tableActivity" styleClass="activity-table">
                <columns>
                    <TableColumn fx:id="colName" text="Name" prefWidth="120"/>
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
                    <TableColumn fx:id="colJoined" text="Joined" prefWidth="100"/>
                    <TableColumn fx:id="colType" text="Type" prefWidth="100"/>
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
