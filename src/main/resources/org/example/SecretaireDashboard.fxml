<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import java.net.URL?>
<BorderPane fx:id="root"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.SecretaireController"
            prefWidth="1024" prefHeight="600">
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
    <!-- ###### LEFT SIDEBAR ###### -->
    <left>
        <VBox fx:id="sidebar"
              spacing="10"
              styleClass="sidebar"
              BorderPane.alignment="CENTER">

            <!-- Brand or Logo -->
            <Label text="My Auto-Ecole" styleClass="sidebar-brand"/>

            <!-- Sidebar Buttons -->
            <Button fx:id="btnCandidats" text="Candidats" styleClass="sidebar-button" onAction="#handleCandidats"/>
            <Button fx:id="btnMoniteurs"   text="Moniteurs"   styleClass="sidebar-button" onAction="#handleMoniteurs"/>
            <Button fx:id="btnVehicules" text="Véhicules" styleClass="sidebar-button" onAction="#handleVehicules"/>
            <Button fx:id="btnPaiements"     text="Paiements"     styleClass="sidebar-button" onAction="#handlePaiements"/>
            <Button fx:id="btnSeances"     text="Séances"     styleClass="sidebar-button" onAction="#handleSeances"/>
            <Button fx:id="btnInscription"  text="Inscription aux examens officiels"  styleClass="sidebar-button" onAction="#handleInscription"/>
            <Button fx:id="btnAnalytics"  text="Analytics"  styleClass="sidebar-button" onAction="#handleAnalytics"/>


            <Separator orientation="HORIZONTAL" styleClass="sidebar-separator" />
            <Button fx:id="btnLogout" text="Déconnexion" styleClass="sidebar-button logout" onAction="#handleLogout"/>
        </VBox>
    </left>

    <!-- ###### TOP NAVBAR ###### -->
    <top>
        <HBox styleClass="top-bar" spacing="15">
            <Label fx:id="pageTitle" text="Dashboard" styleClass="title" />
            <!-- Additional top-bar items (search field, user avatar, etc.) can go here -->
        </HBox>
    </top>

    <!-- ###### CENTER CONTENT (Dynamic area) ###### -->
    <center>
        <!-- This is the container that will swap out different pages. -->
        <StackPane fx:id="contentArea" BorderPane.alignment="CENTER"/>
    </center>

</BorderPane>
